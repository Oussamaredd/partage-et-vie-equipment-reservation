{
  "name": "equipment-reservation-root",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run dev:foreground",
    "dev:foreground": "npm run dev:ctl -- local up --foreground",
    "dev:detached": "npm run dev:ctl -- local up",
    "dev:ctl": "node infra/scripts/dev.mjs",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "npm run dev:ctl -- logs",
    "docker:status": "npm run dev:ctl -- status",
    "docker:doctor": "npm run dev:ctl -- doctor",
    "docker:reset": "npm run dev:ctl -- reset docker --yes",
    "reset:all": "npm run dev:ctl -- reset all --yes",
    "local:up": "npm run dev",
    "local:down": "npm run dev:ctl -- local down",
    "local:logs": "npm run dev:ctl -- local logs all",
    "local:status": "npm run dev:ctl -- local status",
    "local:reset": "npm run dev:ctl -- reset local --yes"
  }
}
